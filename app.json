{
  "expo": {
    "name": "edu-gestor",
    "slug": "edu-gestor",
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos acessar sua câmera para capturar fotos",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar sua galeria para selecionar fotos"
      },
      "usesIcloudStorage": true
    },
    "packagerOpts": {
      "assetExts": [
        "bin",
        "json"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acesso à câmera"
        }
      ]
    ]
  }
}